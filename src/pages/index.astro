---

<DevLayout title={SITE.title} description={SITE.desc}>
  <!-- Hero Section with Branding -->
  <div class="mb-8 bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-gray-800 dark:via-gray-900 dark:to-gray-800 rounded-2xl p-8 shadow-sm border border-gray-200 dark:border-gray-700">
    <div class="flex items-start gap-6">
      <div class="hidden sm:block shrink-0">
        <img
          src="/assets/images/logo.png"
          alt="Logs of a Thinking Machine"
          class="h-24 w-auto object-contain"
        />
      </div>
      <div class="flex-1">
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-2 bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent">
          {SITE.title}
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-4 leading-relaxed">
          {SITE.desc}
        </p>
        <div class="flex flex-wrap items-center gap-3 text-sm">
          <a href="/posts" class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-full transition-colors shadow-sm">
            <span class="font-semibold">{totalPosts}</span>
            <span>Articles</span>
          </a>
          <span class="text-gray-400 hidden sm:inline">â€¢</span>
