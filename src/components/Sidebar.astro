---
import { getCollection } from "astro:content";
import getUniqueTags from "@/utils/getUniqueTags";
import getPostsByTag from "@/utils/getPostsByTag";
import { SITE } from "@/config";
import LinkButton from "./LinkButton.astro";
import Socials from "./Socials.astro";

// Get popular tags (top 4 by post count)
const posts = await getCollection("blog", ({ data }) => !data.draft);
const tags = getUniqueTags(posts);
const tagsWithCounts = tags.map(({ tag, tagName }) => {
  const tagPosts = getPostsByTag(posts, tag);
  return { tag, tagName, count: tagPosts.length };
});
const popularTags = tagsWithCounts
  .sort((a, b) => b.count - a.count)
  .slice(0, 4);
---

<!-- Sidebar -->
<aside class="fixed left-0 top-16 h-[calc(100vh-4rem)] w-64 bg-white dark:bg-gray-900 shadow-sm border-r border-gray-200 dark:border-gray-700 overflow-y-auto z-40 hidden lg:block">
  <div class="p-6 space-y-6">
    <!-- Profile Section -->
    <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
      <div class="flex items-center space-x-4 mb-4">
        <div class="w-16 h-16 rounded-full overflow-hidden shadow-sm border-2 border-blue-600 dark:border-blue-400">
          <img 
            src="/assets/images/karimderaz.jfif" 
            alt={SITE.author}
            class="w-full h-full object-cover"
            onerror="if (this.src !== '/assets/images/default-image.svg') { this.src = '/assets/images/default-image.svg'; this.classList.add('broken-image-fallback'); }"
          />
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{SITE.author}</h3>
          <p class="text-blue-600 dark:text-blue-400 text-sm">AI Researcher & Developer</p>
        </div>
      </div>
      <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed mb-4">
        Exploring the intersection of artificial intelligence and human consciousness through code and contemplation.
      </p>
      
      <!-- Social Links -->
      <Socials />
    </div>

    <!-- Navigation Menu -->
    <nav class="space-y-1">
      <h4 class="text-gray-500 dark:text-gray-400 font-medium text-sm uppercase tracking-wider mb-3 px-3">Navigation</h4>
      
      <a href="/" class="group flex items-center space-x-3 px-3 py-2 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-gray-900 dark:hover:text-white transition-all duration-200">
        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
        <span class="font-medium">Home</span>
      </a>
      
      <a href="/posts" class="group flex items-center space-x-3 px-3 py-2 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-gray-900 dark:hover:text-white transition-all duration-200">
        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <span class="font-medium">Posts</span>
      </a>
      
      <a href="/tags" class="group flex items-center space-x-3 px-3 py-2 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-gray-900 dark:hover:text-white transition-all duration-200">
        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
        </svg>
        <span class="font-medium">Tags</span>
      </a>
      
      <a href="/about" class="group flex items-center space-x-3 px-3 py-2 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-gray-900 dark:hover:text-white transition-all duration-200">
        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="font-medium">About</span>
      </a>
      
      <a href="/search" class="group flex items-center space-x-3 px-3 py-2 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 hover:text-gray-900 dark:hover:text-white transition-all duration-200">
        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <span class="font-medium">Search</span>
      </a>
    </nav>

    <!-- Popular Tags -->
    {popularTags.length > 0 && (
      <div>
        <h4 class="text-gray-500 dark:text-gray-400 font-medium text-sm uppercase tracking-wider mb-3 px-3">Popular Tags</h4>
        <div class="flex flex-wrap gap-2 px-3">
          {popularTags.map(({ tag, tagName, count }) => (
            <a 
              href={`/tags/${tag}/`} 
              class="px-3 py-1.5 bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300 rounded-full text-sm hover:bg-blue-100 dark:hover:bg-blue-900/30 transition-colors duration-200 border border-blue-200 dark:border-blue-800"
            >
              #{tagName} <span class="text-xs opacity-75">({count})</span>
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Quick Actions -->
    <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4 border border-gray-200 dark:border-gray-700">
      <h4 class="text-gray-500 dark:text-gray-400 font-medium text-sm uppercase tracking-wider mb-3">Quick Actions</h4>
      <div class="space-y-2">
        <LinkButton
          href="/rss.xml"
          class="w-full flex items-center justify-center space-x-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200 text-sm shadow-sm"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248S0 22.546 0 20.752s1.456-3.248 3.252-3.248 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z"/>
          </svg>
          <span>RSS Feed</span>
        </LinkButton>
      </div>
    </div>
  </div>
</aside> 