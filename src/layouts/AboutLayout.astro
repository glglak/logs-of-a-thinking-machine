---
import DevLayout from "./DevLayout.astro";
import { SITE } from "@/config";

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;
---

<DevLayout title={`${frontmatter.title} | ${SITE.title}`} description={frontmatter.description}>
  <!-- Page Header -->
  <div class="mb-8 bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">{frontmatter.title}</h1>
    {frontmatter.description && (
      <p class="text-gray-600 dark:text-gray-300">{frontmatter.description}</p>
    )}
  </div>
  
  <!-- Content -->
  <div class="bg-white dark:bg-gray-800 rounded-lg p-8 shadow-sm border border-gray-200 dark:border-gray-700 prose prose-gray dark:prose-invert max-w-none">
    <slot />
  </div>
</DevLayout>
