---
import { ViewTransitions } from "astro:transitions";
import { getCollection } from "astro:content";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Sidebar from "@/components/Sidebar.astro";
import ConvertKitSubscribe from "@/components/ConvertKitSubscribe.astro";
import NewsletterPopup from "@/components/NewsletterPopup.astro";
import Analytics from "@/components/Analytics.astro";
import "@/styles/global.css";

// Get dynamic stats
const allPosts = await getCollection("blog", ({ data }) => !data.draft);
const totalPosts = allPosts.length;

// Get unique tags
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags))];
const totalTags = allTags.length;

// Get unique content pillars
const allPillars = [...new Set(allPosts.map(post => post.data.content_pillar).filter(Boolean))];
const totalPillars = allPillars.length;

export interface Props {
  title?: string;
  author?: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
  pubDatetime?: Date;
  modDatetime?: Date | null;
  scrollSmooth?: boolean;
}

const {
  title = "Logs of a Thinking Machine",
  author = "Karim Deraz", 
  description = "Explorations in AI, Philosophy, and the Digital Mind",
  ogImage = "/og.png",
  canonicalURL = new URL(Astro.url.pathname, Astro.site).href,
  pubDatetime,
  modDatetime,
  scrollSmooth = false,
} = Astro.props;
---

<!doctype html>
<html lang="en" class={scrollSmooth ? "scroll-smooth" : ""}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#1e90ff" />
    <link rel="apple-touch-icon" href="/assets/images/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/override.css" />

    <!-- General Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <meta name="keywords" content="AI blog, artificial intelligence, machine learning, LLM, GPT, neural networks, AI news, tech philosophy, software architecture" />
    <meta name="robots" content="index, follow" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="alternate" type="application/rss+xml" title="Logs of a Thinking Machine RSS" href="/rss.xml" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={pubDatetime ? "article" : "website"} />
    <meta property="og:site_name" content="Logs of a Thinking Machine" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={new URL(ogImage, Astro.site).href} />
    <meta property="og:image:alt" content={title} />
    <meta property="og:locale" content="en_US" />

    <!-- Article Published/Modified time -->
    {
      pubDatetime && (
        <meta
          property="article:published_time"
          content={pubDatetime.toISOString()}
        />
      )
    }
    {
      modDatetime && (
        <meta
          property="article:modified_time"
          content={modDatetime.toISOString()}
        />
      )
    }

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />

    <ViewTransitions />

    <!-- Analytics (Privacy-focused) -->
    <Analytics />

    <!-- JSON-LD Structured Data for SEO -->
    <script type="application/ld+json" set:html={JSON.stringify(
      pubDatetime ? {
        "@context": "https://schema.org",
        "@type": "BlogPosting",
        "headline": title,
        "description": description,
        "image": new URL(ogImage, Astro.site).href,
        "datePublished": pubDatetime?.toISOString(),
        "dateModified": modDatetime?.toISOString() || pubDatetime?.toISOString(),
        "author": {
          "@type": "Person",
          "name": author,
          "url": "https://www.linkedin.com/in/karimderaz/"
        },
        "publisher": {
          "@type": "Organization",
          "name": "Logs of a Thinking Machine",
          "logo": {
            "@type": "ImageObject",
            "url": new URL("/assets/images/logo.png", Astro.site).href
          }
        },
        "mainEntityOfPage": {
          "@type": "WebPage",
          "@id": canonicalURL
        }
      } : {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Logs of a Thinking Machine",
        "description": description,
        "url": new URL("/", Astro.site).href,
        "author": {
          "@type": "Person",
          "name": author,
          "url": "https://www.linkedin.com/in/karimderaz/"
        },
        "potentialAction": {
          "@type": "SearchAction",
          "target": new URL("/search?q={search_term_string}", Astro.site).href,
          "query-input": "required name=search_term_string"
        }
      }
    )} />

    <script is:inline>
      const primaryColorScheme = "none"; // "light" | "dark" | "none"

      const currentTheme = localStorage.getItem("theme");

      function getPreferredTheme() {
        if (currentTheme) return currentTheme;
        if (primaryColorScheme === "none") {
          return window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light";
        }
        return primaryColorScheme;
      }

      function setTheme(theme) {
        if (theme === "dark") {
          document.documentElement.classList.add("dark");
          document.documentElement.setAttribute("data-theme", "dark");
        } else {
          document.documentElement.classList.remove("dark");
          document.documentElement.setAttribute("data-theme", "light");
        }
        localStorage.setItem("theme", theme);
      }

      const theme = getPreferredTheme();
      setTheme(theme);

      window.addEventListener("DOMContentLoaded", () => {
        const themeBtn = document.querySelector("#theme-btn");
        themeBtn?.addEventListener("click", () => {
          const currentTheme = document.documentElement.classList.contains("dark")
            ? "dark"
            : "light";
          const newTheme = currentTheme === "dark" ? "light" : "dark";
          setTheme(newTheme);
        });
      });
    </script>
  </head>

  <body class="min-h-screen bg-gray-50 dark:bg-gray-900 text-skin-base">
    <Header />
    
    <div class="flex">
      <Sidebar />
      
      <!-- Main Content Area -->
      <main class="flex-1 lg:ml-56 xl:mr-72 min-h-screen bg-gray-50 dark:bg-gray-900">
        <div class="max-w-4xl mx-auto px-4 sm:px-5 lg:px-6 py-5">
          <slot />
        </div>
      </main>
      
      <!-- Right Sidebar / Quick Actions -->
      <aside class="hidden xl:block w-72 fixed right-0 top-16 h-[calc(100vh-4rem)] bg-white dark:bg-gray-800 border-l border-gray-200 dark:border-gray-700 overflow-y-auto shadow-sm">
        <div class="p-4 space-y-4">
          <!-- Quick Stats -->
          <div class="bg-gray-50 dark:bg-gray-900 rounded-lg p-4 border border-gray-200 dark:border-gray-700">
            <h3 class="text-base font-semibold mb-3 text-gray-900 dark:text-white">Quick Stats</h3>
            <div class="space-y-3">
              <a href="/posts" class="flex justify-between items-center hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg px-2 py-1 -mx-2 -my-1 transition-colors cursor-pointer">
                <span class="text-gray-600 dark:text-gray-300">Total Posts</span>
                <span class="font-semibold text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300">{totalPosts}</span>
              </a>
              <a href="/posts" class="flex justify-between items-center hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg px-2 py-1 -mx-2 -my-1 transition-colors cursor-pointer">
                <span class="text-gray-600 dark:text-gray-300">Content Pillars</span>
                <span class="font-semibold text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300">{totalPillars}</span>
              </a>
              <a href="/tags" class="flex justify-between items-center hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg px-2 py-1 -mx-2 -my-1 transition-colors cursor-pointer">
                <span class="text-gray-600 dark:text-gray-300">Tags</span>
                <span class="font-semibold text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300">{totalTags}</span>
              </a>
            </div>
          </div>

          <!-- Recent Activity -->
          <div class="bg-gray-50 dark:bg-gray-900 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">Recent Activity</h3>
            <div class="space-y-3 text-sm">
              <div class="flex items-center space-x-2">
                <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                <span class="text-gray-600 dark:text-gray-300">Updated "AI Philosophy"</span>
              </div>
              <div class="flex items-center space-x-2">
                <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                <span class="text-gray-600 dark:text-gray-300">New post published</span>
              </div>
              <div class="flex items-center space-x-2">
                <div class="w-2 h-2 bg-gray-400 rounded-full"></div>
                <span class="text-gray-600 dark:text-gray-300">Site redesign completed</span>
              </div>
            </div>
          </div>
        </div>
      </aside>
    </div>

    <Footer />
    <NewsletterPopup />

    <!-- Service Worker Registration for PWA -->
    <script is:inline>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js')
            .then((registration) => {
              console.log('SW registered:', registration.scope);
            })
            .catch((error) => {
              console.log('SW registration failed:', error);
            });
        });
      }
    </script>
  </body>
</html>

<style>
  /* Force all SVG icons to respect Tailwind sizing */
  svg, svg * {
    display: block;
    flex-shrink: 0;
  }
  
  /* Override hardcoded SVG dimensions with Tailwind classes */
  .w-4.h-4 svg,
  .w-4.h-4 > svg,
  .w-4 svg,
  .h-4 svg {
    width: 1rem !important;
    height: 1rem !important;
    max-width: 1rem !important;
    max-height: 1rem !important;
  }
  
  .w-5.h-5 svg,
  .w-5.h-5 > svg, 
  .w-5 svg,
  .h-5 svg {
    width: 1.25rem !important;
    height: 1.25rem !important;
    max-width: 1.25rem !important;
    max-height: 1.25rem !important;
  }
  
  .w-6.h-6 svg,
  .w-6.h-6 > svg,
  .w-6 svg,
  .h-6 svg {
    width: 1.5rem !important;
    height: 1.5rem !important;
    max-width: 1.5rem !important;
    max-height: 1.5rem !important;
  }
  
  /* Force override on any imported SVG components */
  [astro-icon] svg,
  [data-icon] svg {
    width: inherit !important;
    height: inherit !important;
  }
  
  /* Header specific icon sizing */
  header svg {
    width: 1.25rem !important;
    height: 1.25rem !important;
    max-width: 1.25rem !important;
    max-height: 1.25rem !important;
    min-width: 1.25rem !important;
    min-height: 1.25rem !important;
  }
  
  header .w-6 svg,
  header button svg {
    width: 1.5rem !important;
    height: 1.5rem !important;
    max-width: 1.5rem !important;
    max-height: 1.5rem !important;
  }
  
  /* Force header icon sizing */
  :global(.force-header-icon) {
    width: 24px !important;
    height: 24px !important;
    max-width: 24px !important;
    max-height: 24px !important;
  }
  
  :global(.force-header-icon svg) {
    width: 24px !important;
    height: 24px !important;
    max-width: 24px !important;
    max-height: 24px !important;
  }
  
  /* Social icons specific sizing */
  .social-icon svg,
  [class*="social"] svg {
    width: 1.25rem !important;
    height: 1.25rem !important;
  }
</style> 